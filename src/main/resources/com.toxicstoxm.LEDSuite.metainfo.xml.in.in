<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">

    <id>@ID@</id>

    <name>@NAME@</name>

    <summary>Control LED/display installations</summary>

    <developer id="@DEVELOPER_ID@">
        <name>@DEVELOPER_NAME@</name>
    </developer>

    <metadata_license>CC-BY-SA-4.0</metadata_license>

    <project_license>GPL-3.0-or-later</project_license>

    <translation type="gettext">@ID@</translation>

    <!--WARNING: newest release MUST correspond to the meson version-->
    <releases>

        <release version="1.0.0-rc6" date="2025-05-05" type="development">
            <description>
                <p>Release Candidate #6</p>
                <ul>
                    <li>Updated translations</li>
                    <li>Fixed UI timing bugs</li>
                    <li>Code cleanup</li>
                    <li>Added cancel button to settings dialog to allow stopping current connection attempt</li>
                    <li>Upgraded to the latest version of the GUI library</li>
                </ul>
            </description>
        </release>

